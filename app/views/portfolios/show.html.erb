<div class="container mt-3">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>

      <%= link_to 'Edit Portfolio Item', edit_portfolio_path(@portfolio_item), class: "btn btn-success mt-3" %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <h2>Technologies Used:</h2>

      <hr>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>
